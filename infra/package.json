{
  "name": "infra",
  "version": "0.1.0",
  "bin": {
    "infra": "bin/infra.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "deploy:dev": "cdk deploy --all --context stage=dev --require-approval never",
    "deploy:stg": "cdk deploy --all --context stage=stg --require-approval never",
    "deploy:prod": "cdk deploy --all --context stage=prod --require-approval never",
    "deploy:all": "npm run deploy:dev && npm run deploy:stg && npm run deploy:prod"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.2",
    "aws-cdk": "^2.1100.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.3"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.952.0",
    "@aws-sdk/s3-request-presigner": "^3.952.0",
    "aws-cdk-lib": "^2.233.0",
    "constructs": "^10.4.4"
  }
}
